# Database
DATABASE_URL="postgresql://user:password@localhost:5432/granthub"
DATABASE_SSL="false"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# Application
NODE_ENV="development"
PORT="3000"
API_VERSION="v1"
APP_URL="http://localhost:3000"

# Security
JWT_SECRET="change-this-to-a-random-secure-value"
ENCRYPTION_KEY="32-byte-key-for-field-level-encryption"
SESSION_SECRET="another-random-secure-value"

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:8080"

# Rate Limiting
RATE_LIMIT_WINDOW="900000" # 15 minutes
RATE_LIMIT_MAX="100"

# Email
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@grantready.com"

# File Storage
STORAGE_TYPE="local" # local, s3, azure
S3_BUCKET=""
S3_REGION="us-east-1"
AZURE_STORAGE_CONNECTION_STRING=""

# Monitoring
SENTRY_DSN=""
LOG_LEVEL="info"

# Features
ENABLE_MFA="true"
ENABLE_AUDIT_LOGS="true"
ENABLE_COMPLIANCE_MODE="false"
