{
  "name": "grantready-docs",
  "version": "1.0.0",
  "description": "Grant documentation templates, compliance frameworks, and audit-ready schemas",
  "main": "index.js",
  "scripts": {
    "validate:schemas": "node scripts/validate-schemas.js",
    "validate:examples": "node scripts/validate-schemas.js --examples",
    "validate:markdown": "markdownlint '**/*.md' --ignore node_modules",
    "check:links": "markdown-link-check '**/*.md' --config .markdown-link-check.json",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:serve": "docsify serve .",
    "test": "npm run validate:schemas && npm run validate:examples",
    "precommit": "npm run validate:schemas && npm run validate:markdown",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grantready/grantready-docs.git"
  },
  "keywords": [
    "grants",
    "compliance",
    "documentation",
    "templates",
    "schemas",
    "audit",
    "government",
    "nonprofit"
  ],
